generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Room model
model Room {
  id        String   @id @default(cuid())
  name      String   @unique
  capacity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Booking model
model Booking {
  id        String   @id @default(cuid())
  roomId    String
  startTime DateTime
  endTime   DateTime
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
